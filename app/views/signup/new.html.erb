<h1>Signup</h1>

<%= form_for(@user, url: 'signup') do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @user.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %><br>
    <% @user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div>
    <%= form.label :password_digest %><br>
    <%= form.password_field :password_digest %><br>
    <% @user.errors.full_messages_for(:password_digest).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Login", login_path %>
